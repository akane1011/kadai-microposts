<ul class="media-list">
  <% microposts.each do |micropost| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = {size: 50}) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <p><%= link_to "Delete", micropost, method: :delete, data: { confirm: "Your Sure?" }, class: 'btn btn-danger btn-xs' %></p>
          <% end %>
        </div>
        <div>
          <p><%= render 'fav_microposts/fav_button', method: :favorite, micropost: micropost %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>